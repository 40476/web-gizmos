<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Applications</title>

  <style>
    :root {
      --bg: #f5f5f5;
      --text: #222;
      --card-bg: #fff;
      --card-shadow: rgba(0,0,0,0.1);
      --link: #0077cc;
      --sidebar-bg: #222;
      --sidebar-text: #eee;
      --sidebar-hover: #fff;
    }

    @media (prefers-color-scheme: dark) {
      :root {
        --bg: #111;
        --text: #eee;
        --card-bg: #1c1c1c;
        --card-shadow: rgba(255,255,255,0.05);
        --link: #4da3ff;
        --sidebar-bg: #000;
        --sidebar-text: #ccc;
        --sidebar-hover: #fff;
      }
    }

    body.dark {
      --bg: #111;
      --text: #eee;
      --card-bg: #1c1c1c;
      --card-shadow: rgba(255,255,255,0.05);
      --link: #4da3ff;
      --sidebar-bg: #000;
      --sidebar-text: #ccc;
      --sidebar-hover: #fff;
    }

    body {
      margin: 0;
      font-family: system-ui, sans-serif;
      background: var(--bg);
      color: var(--text);
      display: flex;
      min-height: 100vh;
      transition: background 0.3s, color 0.3s;
    }

    nav {
      width: 260px;
      background: var(--sidebar-bg);
      color: var(--sidebar-text);
      padding: 20px;
      box-sizing: border-box;
      transition: background 0.3s, color 0.3s;
    }

    nav h2 {
      margin-top: 0;
      font-size: 1.2rem;
      letter-spacing: 0.5px;
    }

    nav a {
      display: block;
      color: var(--sidebar-text);
      text-decoration: none;
      padding: 6px 0;
      font-size: 0.95rem;
      transition: color 0.2s;
    }

    nav a:hover {
      color: var(--sidebar-hover);
    }

    #search {
      width: 100%;
      padding: 8px 10px;
      margin: 15px 0 20px 0;
      border-radius: 6px;
      border: none;
      font-size: 0.95rem;
    }

    main {
      flex: 1;
      padding: 40px;
      box-sizing: border-box;
    }

    h1 {
      margin-top: 0;
      font-size: 2rem;
    }

    section {
      background: var(--card-bg);
      padding: 20px;
      margin-bottom: 25px;
      border-radius: 8px;
      box-shadow: 0 1px 3px var(--card-shadow);
      transition: background 0.3s, box-shadow 0.3s;
    }

    section h2 {
      margin-top: 0;
      font-size: 1.4rem;
    }

    .app-link {
      display: inline-block;
      margin-bottom: 10px;
      font-size: 0.9rem;
      color: var(--link);
      text-decoration: none;
    }

    .app-link:hover {
      text-decoration: underline;
    }

    #themeToggle {
      margin-top: 20px;
      padding: 8px 12px;
      background: var(--card-bg);
      color: var(--text);
      border: 1px solid var(--text);
      border-radius: 6px;
      cursor: pointer;
      font-size: 0.9rem;
      transition: background 0.3s, color 0.3s, border 0.3s;
    }
  </style>
</head>

<body>

  <nav>
    <h2>Applications</h2>

    <input id="search" type="text" placeholder="Search applications..." />

    {% for name, summary in applications.items() %}
      <a class="nav-item" href="{{ name }}/index.html" data-name="{{ name }}">{{ name }}</a>
    {% endfor %}

    <button id="themeToggle">Toggle Theme</button>
  </nav>

  <main>
    <h1>Applications Overview</h1>

    {% for name, summary in applications.items() %}
      <section class="app-section" data-name="{{ name }}">
        <a class="app-link" href="{{ name }}/index.html">Open {{ name }}</a>
        <h2>{{ name }}</h2>
        {{ summary | safe }}
      </section>
    {% endfor %}
  </main>

  <script>
    const search = document.getElementById("search");
    const navItems = document.querySelectorAll(".nav-item");
    const sections = document.querySelectorAll(".app-section");

    search.addEventListener("input", () => {
      const q = search.value.toLowerCase();

      navItems.forEach(item => {
        const name = item.dataset.name.toLowerCase();
        item.style.display = name.includes(q) ? "block" : "none";
      });

      sections.forEach(sec => {
        const name = sec.dataset.name.toLowerCase();
        sec.style.display = name.includes(q) ? "block" : "none";
      });
    });

    const toggle = document.getElementById("themeToggle");
    toggle.addEventListener("click", () => {
      document.body.classList.toggle("dark");
    });
  </script>

</body>
</html>
